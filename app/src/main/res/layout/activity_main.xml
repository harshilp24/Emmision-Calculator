<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:padding="12dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/cyan"
        android:padding="12dp">

    <Spinner
        android:layout_margin="10dp"
        android:padding="12dp"
        android:fontFamily="@font/fontmosreg"
        android:textColor="@color/white"
        android:id="@+id/simpleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/edtstart"
        android:fontFamily="@font/fontmosreg"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@color/cyan"
        android:layout_margin="10dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Location"
        />

    <EditText
        android:id="@+id/edtstop"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:fontFamily="@font/fontmosreg"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/cyan"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Location"
        />

   <!-- <TextView
        android:id="@+id/txtkm"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KM"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->
    <TextView
        android:fontFamily="@font/fontmosreg"
        android:id="@+id/txtkm"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        />
    <TextView
        android:id="@+id/edtperprice"
        android:visibility="visible"
        android:fontFamily="@font/fontmosreg"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        />
    <Button
        android:id="@+id/btncal"
        android:background="@color/btncolor"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Calculate Travel Cost"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/btnemi"
        android:background="@color/btncolor"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Calculate Emission "
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/finalans"
        android:padding="12dp"
        android:fontFamily="@font/fontmos"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        />
  <!--  <TextView
        android:id="@+id/finalans"
